
<div id="nav" class="span-24 last">
  <div class="nav_label span-1 append-1">category</div>
  <div id="nav_categories" class="span-10">
    <% for category in @categories %>
      <div id="c_<%= category.id %>" class="toggle selected"><%= category.name.downcase  %></div>
    <% end %>
  </div>

  <div class="nav_label span-1 append-1">platform</div>
  <div id="nav_platforms" class="span-3 append-1">
    <div id="p_0" class="toggle">osx</div>
    <div id="p_0" class="toggle">windows</div>
    <div id="p_0" class="toggle">linux</div>
    <div id="p_0" class="toggle">ios</div>
    <div id="p_0" class="toggle">android</div>
    <div id="p_0" class="toggle">rpi</div>
  </div>

  <div class="nav_label span-1">etc</div>
  <div id="nav_other" class="span-4">
    <div id="e_stars" class="menu">
      <span id="e_stars_selected">stars</span>
      <div style="display:none" id="stars_menu" class="nav_drop_menu">
        <ul>
          <li>any</li>
          <li>5+</li>
          <li>10+</li>
          <li>50+</li>
          <li>100+</li>
        </ul>
      </div>
    </div>
    <div id="e_updated" class="menu">
      <span id="e_updated_selected">updated since</span>
      <div style="display:none" id="updated_menu" class="nav_drop_menu">
        <ul>
          <li>any</li>
          <li>0.6.1</li>
          <li>0.6.2</li>
          <li>0.7.0</li>
          <li>0.7.1</li>
          <li>0.7.2</li>
          <li>0.7.4</li>
          <li>0.8.0</li>
        </ul>
      </div>
    </div>
    <div id="p_0" class="toggle">makefile</div>
    <div id="p_0" class="toggle">example</div>
  </div>
</div>

<div id="body" class="span-26 last" >
  <% index = 0; for repo in @categorized.sort_by{|r| -r.followers.to_i }  %>
    
    <div class="c_<%= repo.category_id %> repo span-7 append-1 <% if (index+1).divmod(3)[1] == 0 %> last<% end %>" >
      <p class="name github"><a href="<%= repo.github_url %>"><%= repo.name %></a></p>

      <% if !repo.warning_labels.blank? %>
        <p class="warning-labels">
          <% for warning in repo.warning_labels %>
          <span class="warning <%= warning %>">
            <%= warning.to_s.split("-").last %>
          </span>
          <% end %> 
        </p>
      <% end %>

      <p class="description"><%= repo.description %></p>

       <p class="author">
        <% if !repo.owner_avatar.blank?  %>
          <img class="userIcon" src="<%= repo.owner_avatar %>" />
        <% else %>
          <img class="userIcon" src="/images/default-gravatar.png">
        <% end %>
        
        <a class="github" href="<%= repo.github_url %>">created</a> by <a href="/users/<%= repo.owner %>"><%= repo.owner %></a> <br/>updated <abbr class="timeago" title="<%= repo.last_pushed_at.strftime('%Y-%m-%dT%H:%M:%S%z') %>"><%= repo.last_pushed_at.strftime("%m/%e/%y") %></abbr> (<%= repo.get_last_update_of_release %>) 
        <% if repo.followers != 0 && !repo.followers.blank? %>
          <img class="starImage" src="images/starGray.png" /> <b><%= repo.followers %></b>
        <% end %>
      </p>


      <% for fork in repo.fresher_forks %>
        <p>
          <% if !fork.owner_avatar.blank?  %>
            <img class="userIcon" src="<%= fork.owner_avatar %>" />
          <% else %>
            <img class="userIcon" src="/images/default-gravatar.png">
          <% end %>
          <a class="github" href="<%fork.github_url%>">fork</a> by <a href="http://github.com/<%= fork.owner %>"><%= fork.owner %></a> <br/>updated <abbr class="timeago" title="<%= fork.last_pushed_at.strftime('%Y-%m-%dT%H:%M:%S%z') %>"><%= fork.last_pushed_at.strftime("%m/%e/%y") %></abbr> (<%= fork.get_last_update_of_release %>) 
        <% if fork.followers != 0 && !fork.followers.blank? %>
          <img class="starImage" src="images/starGray.png" /> <b><%= fork.followers %></b>
        <% end %>
        </p>
      <% end %>
    </div>

    <% index = index + 1 %>
  <% end %>
</div>
